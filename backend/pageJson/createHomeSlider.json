{
    "title": "Create Home Slider",
    "jsonPage": "viewHomeSlider",
    "desciption": "",
    "pageType": "create",
    "fields": [{
            "name": "Movie",
            "type": "selectFromTable",
            "tableRef": "movie",
            "placeholder": "Enter movie",
            "id": "input1",
            "validation": ["required", "trim", "unique"],
            "url": "movie/find"
        }, {
            "name": "Status",
            "type": "select",
            "tableRef": "status",
            "placeholder": "Enter status",
            "id": "input3",
            "validation": ["required", "trim", "unique"],
            "url": [{
                "value": true,
                "name": "Enable"
            }, {
                "value": false,
                "name": "Disable"
            }]
        }, {
            "name": "Image",
            "type": "image",
            "tableRef": "image",
            "placeholder": "Enter image",
            "id": "input2",
            "validation": ["required", "trim", "unique"],
            "url": "",
            "size": "1600 x 713px"
        }, {
            "name": "Image For Mobile",
            "type": "image",
            "tableRef": "mobileImage",
            "placeholder": "Enter mobileImage",
            "id": "input2",
            "validation": ["required", "trim", "unique"],
            "url": "",
            "size": "705 x 1087px"
        }, {
            "name": "Image For iPad",
            "type": "image",
            "tableRef": "ipadImage",
            "placeholder": "Enter mobileImage",
            "id": "input2",
            "validation": ["required", "trim", "unique"],
            "url": "",
            "size": "941 x 900"
        },

        {
            "name": "Image For iPad Pro",
            "type": "image",
            "tableRef": "ipadProImage",
            "placeholder": "Enter Ipad Pro Image",
            "id": "input2",
            "validation": ["required", "trim", "unique"],
            "url": "",
            "size": "1366 X 1024"
        },
        {
            "name": "Order",
            "type": "text",
            "tableRef": "order",
            "placeholder": "Enter order",
            "id": "input2",
            "validation": ["required", "trim", "unique"],
            "url": ""
        }, {
            "name": "Url",
            "type": "text",
            "tableRef": "url",
            "placeholder": "Enter url",
            "id": "input2",
            "validation": ["required", "trim", "unique"],
            "url": ""
        }
    ],
    "action": [{
        "name": "submit",
        "action": "submitUser"
    }, {
        "name": "cancel",
        "stateName": "page({jsonName:'viewHomeSlider'})"
    }],

    "apiCall": {
        "url": "homeslider/save"
    }
}
